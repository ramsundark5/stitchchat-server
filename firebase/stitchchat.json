{
  "rules": {
    "users": {
      ".write": "auth.uid != null"
    },
    "presence": {
      ".write": "auth.uid != null"
    },
    "private_messages": {
      "$phoneNumber": {
        ".validate": "root.child('users').child($phoneNumber).val() != null",
        "$messageId": {
          ".validate": "newData.hasChildren(['senderId', 'receiverId', 'message', 'isGroupThread'])",
          "senderId": {
            ".validate": "newData.isString()"
          },
          "receiverId": {
            ".validate": "newData.isString()"
          },
          "message": {
            ".validate": "newData.isString()"
          },
          "isGroupThread": {
            ".validate": "newData.isBoolean()"
          },
          "$other": {
            ".validate": "false"
          },
          ".write": "data.val() == null && (root.child('users').child($phoneNumber).val() != null && root.child('users').child($phoneNumber).child('blocked').child(auth.uid).val() != null)",
          ".read": "root.child('users').child($phoneNumber).val() != null && root.child('users').child($phoneNumber).child('blocked').child(auth.uid).val() != null"
        }
      }
    },
    "group_messages": {
      "$groupId": {
        ".write": "root.child('group_info').child($groupId).child('groupMembers').child(auth.uid).val() != null != null"
      }
    },
    "group_info": {
      ".write": "data.val() == null && auth.uid != null",
      "$groupId": {
        ".write": "root.child('group_info').child($groupId).child('groupMembers').child(auth.uid).val() != null != null"
      }
    }
  }
}
